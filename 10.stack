#!/bin/bash

LOG=/tmp/stack.log
rm -f /tmp/stack.log

error() {
 echo -e "\n$1\n"
 }
 
Head() {
 echo -e "\n\t\t>>>>$1<<<<<<\n"
}

Print() {
 echo -e "    $1\t--"
}

Stat(){
if [ $? -eq 0 ]; then
  echo "Success"
else
  echo "Failure"
  echo "Refer the logs for more detail---file path = $LOG"
  exit 10
 fi
}

USER_ID=$(id -u)
if [ $USER_ID -ne 0 ]; then 
 error "You are not a root user"
 exit 1
fi

Head "WEB SERVER Setup"

Print "Install HTTPD Server"
 yum install httpd -y &>>$LOG
 Stat $?
